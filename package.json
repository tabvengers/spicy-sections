{
  "name": "spicy-sections",
  "type": "module",
  "version": "0.9.0",
  "description": "A custom element that allows authors to employ tabs, accordions and summary+detail like UI affordances via CSS over otherwise good semantic content",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "serve docs",
    "test": "npm run build && npm run test:cafe",
    "test:cafe": "testcafe firefox:headless --app \"serve docs\" test/general.tests.ts --skip-js-errors"
  },
  "author": "Brian Kardell <bkardell@igalia.com>",
  "contributors": [
    "Jonathan Neal",
    "Dave Rupert",
    "Miriam Suzanne",
    "Hidde de Vries"
  ],
  "license": "W3C",
  "devDependencies": {
    "serve": "^13.0.2",
    "testcafe": "^1.18.5",
    "typescript": "^4.6.3"
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          "*.js",
          "*.ts"
        ],
        "options": {
          "quoteProps": "consistent",
          "singleQuote": true,
          "semi": false,
          "useTabs": true
        }
      }
    ]
  }
}
